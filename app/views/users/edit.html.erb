<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 text-center">
      <div>
        <h1 class="m-5">プロフィール編集</h1>
      </div>
      <div>
       <%= form_with model:@user, local:true do |f| %>
       <div class="mb-3">
        <div>
         <label for="inputName">名前</label>          
        </div>
        <div>
         <%= f.text_field :nickname, autofocus: true, id:"inputName",class:"form-control", placeholder:"名前"%>           
        </div>
       </div>
       <div>
         <div class="mb-3">
          <label for="inputImage">プロフィール画像</label>
          <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "00582.png", size:'100x100' %>
         </div>
         <div class="mb-3">
          <%= f.attachment_field :image, id:"inputImage", placeholder: "プロフィール画像" %>
         </div>
       </div>
       <div class="mb-3">
         <label for="inputMailadress">メールアドレス</label>
         <%= f.text_field :email, id:"inputemail",class:"form-control",placeholder: "メールアドレス" %>
       </div>
       <div class="mb-3">
         <label for="inputMailadress">自己紹介</label>
         <%= f.text_area :introduction, id:"inputIntroduction",class:"form-control", placeholder: "自己紹介",rows: 5, maxlemgth: "200" %>
       </div>

       <div class="mb-3">
         <%= f.submit "変更を保存",class:"btn btn-primary" %>
         <%= link_to "退会する", user_check_path,class:"btn btn-danger" %>
       </div>
         <% end %>
      </div>
    </div>
  </div>
</div>


