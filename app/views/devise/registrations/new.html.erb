<div class="container-fluid mt-5">
    <div class="row">
      <div class="col-lg-6 offset-lg-3 text-center">
        <!--<form>-->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
            <!--<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">-->
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <!--<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">-->
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control",id: "exampleInputPassword1" %>
          </div>
          <div class="form-group">
            <!--<label for="exampleInputPassword1">Password</label>-->
            <!--<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">-->
            <!--<#%= f.password_field :password, autocomplete: "new-password",class: "form-control",id: "exampleInputPassword1" %>-->
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="exampleInputNickname">名前</label>
            <!--<input type="nickname" class="form-control" id="exampleInputNickname" placeholder="Nickname">-->
            <%= f.text_field :nickname, autofocus: true ,class: "form-control", placeholder: "Nickname"%>
          </div>

          <button type="submit" class="btn btn-primary">登録</button>
        <!--</form>-->
          <%end%>
        <div class="text-info">
        </div>
    </div>
  </div>