<!DOCTYPE html>
<html>
  <head>
    <title>Flog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <%= image_tag("IMG_5784.jpg", class: 'logo mx-auto d-block') %>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Top', root_path, class: 'nav-link text-dark' %>
              </li>
               <li class="nav-item">
                <%= link_to 'Flogs', flogs_path, class: 'nav-link text-dark' %>
               </li>
               <li class="nav-item">
                <%= link_to 'MyLists', mylists_path, class: 'nav-link text-dark' %>
               </li>
               <li class="nav-item">
                <%= link_to 'プロフィール編集', edit_user_path(current_user.id), class: 'nav-link text-dark' %>
               </li>
               <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
               </li>
             <% else %>
                <li class="nav-item">
                  <%= link_to 'Top', root_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
                </li>
              <% end %>
          </ul>
        </div>
      </nav>
    </header>

      <main>
        <%= yield %>
      </main>
      
      <footer>
      </footer>
      
    </body>
</html>
