<div class="container-fluid m-5">
  <div class="row">
    <div class="text-center">
      <h1 class="mb-3">Flogを編集</h1>
        <div>
          <%= image_tag("https://image.tmdb.org/t/p/w200/" + @flog.movie_poster) %>
        </div>
        <div class="mt-3 mb-3">
          <%= form_with model:@flog, url:"/flogs/#{@flog.id}", local:true do |f| %>
            <div class="field mb-4" id="star","">
              <%= f.hidden_field :score, id: :review_star %>
              <script>
                $('#star').raty({
                  size     : 36,
                  score : '<%= @flog.score %>',
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  scoreName: 'wrriten_flog[score]',
                  half: true,
                });
              </script>
            </div>
            <div class="mb-3">
             <%= f.text_area :review, :size=>"55x7"  %>
            </div>
            <div class="mb-3">
              <%= f.submit 'Flog!' %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
