<div class="container-fluid m-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 text-center">
        <h1 class="movie-title"><%= @movie_title %></h1>
      <div class="mb-4">
        <p><%= image_tag("https://image.tmdb.org/t/p/w200/" + @movie_poster) %></p>
      </div>
        <%= form_with model:@wrriten_flog, url:'/flogs', :method => 'post', local:true do |f| %>

          <div class="field mb-4" id="star","">
              <%= f.hidden_field :score, id: :review_star %>
              <script>
                $('#star').raty({
                  size     : 36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  scoreName: 'wrriten_flog[score]',
                  half: true,
                });
              </script>
          </div>
          <div class="mb-3">
          <%= f.text_area :review, :size=>"55x7", class:"form-control", rows: 5  %>
          <%= f.hidden_field :movie_id, :value => @search[:id] %>
          <%= f.hidden_field :movie_title, :value => @movie_title %>
          <%= f.hidden_field :movie_poster, :value => @movie_poster %>
          </div>
          <div>
          <%= f.submit 'Flog!', class:"btn btn-light" %>
          </div>
        <% end %>
    </div>
  </div>
</div>